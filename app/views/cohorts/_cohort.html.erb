
<div class="container">
     <br />
      <div class="row"> 
        <div class="col-md-14 col"> 
         <table class="table table-bordered table-striped table-hover">
          <thead class="thead-dark">
            <tr>
             <th class="text-center" scope="col">Id</th>
             <th class="text-center" scope="col">Name:</th>
             <th class="text-center" scope="col">Start on:</th>
             <th class="text-center" scope="col">End on:</th>
             <th class="text-center" scope="col">Instructor:</th>
             <th class="text-center" scope="col">Course:</th>
             <th class="text-center" scope="col">Student:</th>
             <th class="text-center" scope="col">Edit</th>
             <th class="text-center" scope="col">Delete</th>
            </tr>
          </thead>
           
            <tbody id="killer<%= cohort.id %>">
            <tr class="text-center">
              <td><%= cohort.id %></td>
              <td><%= cohort.name.capitalize %></td>
              <td><%= cohort.start_on %></td>
              <td><%= cohort.end_on %></td>
              <td><%= Instructor.find(cohort.instructor_id).first_name.capitalize %></td>
              <td><%= Course.find(cohort.course_id).name.capitalize %></td>
              <td><%= Student.find(cohort.student_id).last_name.capitalize%>, <%= Student.find(cohort.student_id).first_name.capitalize%></td>
              <td><%= link_to 'Edit', edit_cohort_path(cohort), :class => 'btn btn-default' %></td>

                <td>  
                 <%= link_to(cohort_path(id: cohort.id), method: :delete, remote: true) do %>
                  <p class="text-center"><span class="glyphicon glyphicon-trash"></span></p>
                  <%end%>
                </td>
            </tr>
          </tbody>
  
          
         </table>
       </div>
      </div>
    </div>


