<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>



  <div class="col-md-13 col"> 

 <div class="title-container">
<h1>Students</h1>
</div>

<div class="container">
     <%= link_to 'New Student', new_student_path, class: "btn btn-primary btn-lg btn-block" %>
</div>
<br />
<div class="container">
  <div class="row"> 
      <table class="table table-bordered table-striped table-hover table-dark table-responsive-sm">

  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Age</th>
      <th scope="col">Education</th>
      <th scope="col">Email</th>      
      <th scope="col">Registered on</th>
      <th scope="col">Updated on</th>
      <th scope="col">Delete</th>
    </tr>
    
  </thead>
  
  <% @students.each do |student| %>
  <tbody id="killer<%= student.id %>">
    <tr>
    <br>
      <td><%= link_to student.id, student_path(student), :class => 'btn btn-default'  %></td>
       <th><%= student.first_name %></td>
       <th><%= student.last_name %></td>
      <td> <%= student.age %> </td> 
      <td> <%= student.education %></td>
      <td><%= student.email %></td>
      <td><%= student.created_at_formatted %></td>
      <td><%= student.updated_at_formatted %></td>
      <td>  
        <%= link_to(student_path(id: student.id), method: :delete, remote: true) do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
      
    </tr>

  </tbody>


  <% end %>
</table>
</div>
</div>
</div>
