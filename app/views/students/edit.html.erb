<div id="forms-edit">
<br/>
<h1 class="text-center"style="text-shadow: 3px 2px; color: black" >Coders of the Future</h1>
<p class="text-center" style="font-size:17px;">TIME TRAVEL 66K ACADEMY</p>


<h2 class="text-center" style="text-shadow: 3px 2px; color: gray"> Current Student </h2>
<br/>

<div class="container">
<div class="col-5 offset-md-3">
<%= form_with(model: @student) do |form| %>

  <strong>First Name:</strong><br>
   <%= form.text_field(:first_name) %><br /><br />
  <strong>Last Name:</strong><br>
   <%= form.text_field(:last_name) %><br /><br />
  <strong>Age:</strong><br>
   <%= form.text_field(:age) %><br /><br />
  <strong>Education:</strong><br>
  <%= form.select(:education, options_for_select([['High School'], ['College'], ['Masters'], ['PHD']]), { include_blank: true }) %> <br /><br />
  <strong>Email:</strong><br>
   <%= form.text_field(:email) %><br /><br />
  <strong>Cohort:</strong><br>
   <%= form.select :cohort_id, options_for_select(@cohorts, @student.id) %><br /><br />
  <%= form.submit class:"btn btn-success" %>

<% end %>
</div>
</div>
</div>