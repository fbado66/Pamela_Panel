<div id="instructors-index">
  <div class="hero">
   <br/>
   <h1 class="text-center"style="text-shadow: 3px 2px; color: black" >Coders of the Future</h1>
     <p class="text-center" style="font-size:17px;">TIME TRAVEL 66K ACADEMY</p>
       <h2 class="text-center" style="text-shadow: 3px 2px; color: gray"> Reminder </h2>
           <br/>

    </div>
      <div class="container">
         <%= link_to 'New Reminder', new_reminder_path, class: "btn btn-success btn-lg btn-block" %>
      </div>
      <br />
        <div class="container">
           <div class="row"> 
              <div class="col-md-14 col"> 
                  <table class="table table-bordered table-striped table-hover table-light">
                    <thead class="thead-dark">
                       <tr>
                         <th scope="col">Id</th>
                         <th scope="col">Class</th>
                         <th scope="col">Reminder</th>
                         <th scope="col">Created on</th>
                         <th scope="col">EDit</th>
                         <th scope="col">Delete</th>
                       </tr>
                     </thead>
                       <% @reminders.each do |reminder| %>
                       <tbody id="killer<%= reminder.id %>">
                          <tr>
                          <td><%= reminder.id%> </td>
                            <th><%= reminder.name %></td>
                            <td><%= reminder.content %></td>
                            <td><%= reminder.created_at_formatted %></td>
                          <div class="col-3">
                            <td class="text-center"><%= link_to '', edit_reminder_path(reminder), class: "glyphicon glyphicon-edit"  %> </td>
                          </div>
                            <td> <%= link_to(reminder_path(id: reminder.id), method: :delete, remote: true) do %>
                            <p class="text-center"> <span  class="glyphicon glyphicon-trash"></span></p>
                            <% end %> </td>
                          </tr>
                       </tbody>
                     <% end %>
                  </table>
              </div>
          </div>
        </div>

    </div>
</div>