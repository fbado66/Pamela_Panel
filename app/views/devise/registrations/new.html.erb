<div id="sessions-new">
  <div class="col-md-4 offset-md-3 col">  
    <br><br><br><br>
     <h1 class="text-center"style="text-shadow: 3px 2px; color: black" >Coders of the Future</h1>
    <p class="text-center" style="font-size:17px;">TIME TRAVEL 66K ACADEMY</p>   
      <h2 class="text-center" style="text-shadow: 3px 2px; color: gray"> JOIN THE TEAM </h2>
    <br><br>
    <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  <div class="field">
    <strong><%= f.label :email %><br /></strong>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br/>
  <div class="field">
    <strong><%= f.label :password %></strong>
    <% if @minimum_password_length %>
    <i><em>( minimum <%= @minimum_password_length %> **)</em><i>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field">
   <strong> <%= f.label :password_confirmation %><br /></strong>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
